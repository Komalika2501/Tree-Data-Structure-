#include<bits/stdc++.h>
using namespace std;

struct Node{
    int data;
    Node* left;
    Node* right;
    Node(int k){
        data = k;
        left = right = NULL;
    }
};

Node* convertMirror(Node* root){
    if(root == NULL){
        return NULL;
    }
    Node* newroot = new Node(root->data);
    newroot->left = convertMirror(root->right);
    newroot->right = convertMirror(root->left);
    return newroot;
}

void printMirror(Node* root){
    if(root == NULL){
        return ;
    }
    cout<<root->data<<" ";
    printMirror(root->left);
    printMirror(root->right);
}

int main(){
    Node* root = new Node(10);
    root->left = new Node(20);
    root->right = new Node(30);
    root->left->left = new Node(40);
    root->left->right = new Node(50);
    Node* newroot = convertMirror(root);
    printMirror(newroot);
    return 0;
}
